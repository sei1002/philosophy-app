<div class="wrapper">
  
  <div class="chat">
  </div>

  <div class="chat-header">
    <div class="left-header">
      <div class="header-title">
        <%= @room.name %>
      </div>
    </div>
    <div class="right-header">
      <div class="header-button">
        <%= link_to "Philosopher", root_path, class: "toppage-btn" %>
        <a href="#">チャットを終了する</a>
      </div>
    </div>
  </div>

  <div class="messages">
    <div class="message">
      <div class="upper-message">
        <div class="message-user">
          Tom
        </div>
        <div class="message-date">
          2020/3/31(Wed) 12:43:30
        </div>
      </div>
      <div class="lower-message">
        <div class="message-content">
          おはよう
        </div>
      </div>
    </div>

    <div class="message">
      <div class="upper-message">
        <div class="message-user">
          Tom
        </div>
        <div class="message-date">
          2020/3/31(Wed) 12:47:30
        </div>
      </div>
      <div class="lower-message">
        <div class="message-content">
          こんばんは
        </div>
      </div>
    </div>
  </div>

  <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f| %>
    <div class="form-input">
      <%= f.text_area :content, class: 'form-message', placeholder: 'type a message' %>
    </div>
    <%= f.submit '送信', class: 'form-submit' %>
  <% end %>
  
</div>